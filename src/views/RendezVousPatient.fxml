<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.RendezVousPatientController" prefWidth="700" prefHeight="500">

    <VBox spacing="15" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
        <padding>
            <Insets top="30" right="25" bottom="30" left="25"/>
        </padding>

        <VBox spacing="5">
            <Label text="Mes Rendez-vous" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
            <Label fx:id="lblNomPatient" text="Nom du patient" style="-fx-font-size: 14px; -fx-text-fill: #555;" />
        </VBox>

        <!-- Table des rendez-vous -->
        <TableView fx:id="tableRendezVous" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colDateRdv" text="Date" prefWidth="520"/>
                <TableColumn fx:id="colStatutRdv" text="Statut" prefWidth="520"/>
            </columns>
        </TableView>

    </VBox>

</AnchorPane>
