<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.EditPatientDialogController"
            prefWidth="400" prefHeight="250">

    <VBox spacing="10" alignment="CENTER" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">

        <Label text="Modifier Patient" style="-fx-font-size: 16; -fx-font-weight: bold;" />

        <GridPane hgap="10" vgap="10">
            <Label text="Nom:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="txtNom" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="PrÃ©nom:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="txtPrenom" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Date Naissance (YYYY-MM-DD):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="txtDateNaiss" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Sexe:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <ComboBox fx:id="comboSexe" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        </GridPane>

        <HBox spacing="15" alignment="CENTER_RIGHT" prefWidth="300">
            <Button text="OK" fx:id="btnOk" onAction="#handleOk"/>
            <Button text="Annuler" onAction="#handleCancel"/>
        </HBox>

    </VBox>

</AnchorPane>
