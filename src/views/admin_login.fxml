<?xml version="1.0" encoding="UTF-8"?>
<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<StackPane prefHeight="600.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AdminLoginController">
    <children>
        <!-- Formulaire de connexion -->
        <AnchorPane fx:id="formulaire_connexion" prefHeight="600.0" prefWidth="350.0" styleClass="white-bg" stylesheets="@../design/designAdminLogin.css">
            <children>
                <Button layoutX="10" layoutY="10" onAction="#retourAccueil" style="-fx-background-color: transparent; -fx-padding: 0; -fx-border-width: 0;">
                    <graphic>
                        <ImageView fitHeight="16" fitWidth="16">
                            <image>
                                <Image url="/utils/icons/retour.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <FontAwesomeIconView glyphName="USER" fill="#188ba7" layoutX="140.0" layoutY="90.0" size="5em" />
                <Label layoutX="100.0" layoutY="100.0" text="Se connecter" textFill="#188ba7">
                    <font>
                        <Font name="Tahoma" size="20.0" />
                    </font>
                </Label>
                <Label fx:id="labelMessageConnexion" layoutX="64.0" layoutY="125.0" prefHeight="17.0" prefWidth="250.0" textFill="red" />
                <TextField fx:id="champNomUtilisateurConnexion" layoutX="40.0" layoutY="175.0" prefHeight="35.0" prefWidth="270.0" promptText="Nom d'utilisateur" styleClass="textfield-1" />
                <PasswordField fx:id="champMotDePasseConnexion" layoutX="40.0" layoutY="220.0" prefHeight="35.0" prefWidth="270.0" promptText="Mot de passe" styleClass="textfield-1" />
                <TextField fx:id="champAffichageMotDePasseConnexion" layoutX="40.0" layoutY="220.0" prefHeight="35.0" prefWidth="270.0" promptText="Mot de passe" styleClass="textfield-1" visible="false" />
                <CheckBox fx:id="caseAfficherConnexion" layoutX="40.0" layoutY="265.0" onAction="#togglePasswordVisibilityConnexion" text="Afficher le mot de passe" />
                <Button fx:id="btnConnexion" layoutX="40.0" layoutY="300.0" onAction="#handleLogin" prefHeight="40.0" prefWidth="270.0" styleClass="btn-1" text="Se connecter" />
                <Label layoutX="55.0" layoutY="350.0" text="Pas encore de compte ?" />
                <Hyperlink layoutX="182.0" layoutY="347.0" onAction="#basculerFormulaire" text="Créer un compte" />
            </children>
        </AnchorPane>

        <!-- Formulaire d'inscription -->
        <AnchorPane fx:id="formulaire_inscription" prefHeight="600.0" prefWidth="350.0" styleClass="white-bg" stylesheets="@../design/designAdminLogin.css" visible="false">
            <children>
                <Button layoutX="10" layoutY="10" onAction="#retourAccueil" style="-fx-background-color: transparent; -fx-padding: 0; -fx-border-width: 0;">
                    <graphic>
                        <ImageView fitHeight="16" fitWidth="16">
                            <image>
                                <Image url="/utils/icons/retour.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <FontAwesomeIconView glyphName="USER_PLUS" fill="#188ba7" layoutX="130.0" layoutY="90.0" size="5em" />
                <Label layoutX="85.0" layoutY="100.0" text="Créer un compte" textFill="#188ba7">
                    <font>
                        <Font name="Tahoma" size="20.0" />
                    </font>
                </Label>

                <TextField fx:id="champNom" layoutX="40.0" layoutY="150.0" prefHeight="35.0" prefWidth="270.0" promptText="Nom" styleClass="textfield-1" />
                <TextField fx:id="champPrenom" layoutX="40.0" layoutY="195.0" prefHeight="35.0" prefWidth="270.0" promptText="Prénom" styleClass="textfield-1" />
                <TextField fx:id="champNomUtilisateurInscription" layoutX="40.0" layoutY="240.0" prefHeight="35.0" prefWidth="270.0" promptText="Nom d'utilisateur" styleClass="textfield-1" />

                <ComboBox fx:id="comboSpecialite" layoutX="40.0" layoutY="285.0" prefHeight="35.0" prefWidth="270.0" promptText="Spécialité" styleClass="combo-box-1" />

                <PasswordField fx:id="champMotDePasseInscription" layoutX="40.0" layoutY="330.0" prefHeight="35.0" prefWidth="270.0" promptText="Mot de passe" styleClass="textfield-1" />
                <TextField fx:id="champAffichageMotDePasseInscription" layoutX="40.0" layoutY="330.0" prefHeight="35.0" prefWidth="270.0" promptText="Mot de passe" styleClass="textfield-1" visible="false" />

                <CheckBox fx:id="caseAfficherInscription" layoutX="40.0" layoutY="375.0" onAction="#togglePasswordVisibilityInscription" text="Afficher le mot de passe" />
                <Button fx:id="btnInscription" layoutX="40.0" layoutY="410.0" onAction="#handleRegister" prefHeight="40.0" prefWidth="270.0" styleClass="btn-1" text="Créer le compte" />
                <Label layoutX="60.0" layoutY="460.0" text="Vous avez déjà un compte ?" />
                <Hyperlink layoutX="205.0" layoutY="457.0" onAction="#basculerFormulaire" text="Se connecter" />
            </children>
        </AnchorPane>
    </children>
</StackPane>