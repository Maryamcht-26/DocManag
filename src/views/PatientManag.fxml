<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.PatientManagController"
            prefWidth="700" prefHeight="500"
            stylesheets="@../design/TablPatient.css">


    <TableView fx:id="tablePatients" prefHeight="350" prefWidth="650"
               AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colNom" text="Nom" prefWidth="194"/>
            <TableColumn fx:id="colPrenom" text="Prénom" prefWidth="194"/>
            <TableColumn fx:id="colDateNaiss" text="Date Naissance" prefWidth="194"/>
            <TableColumn fx:id="colSexe" text="Sexe" prefWidth="194"/>
            <TableColumn fx:id="colActions" text="Actions" prefWidth="194"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER"
          AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="370">

        <TextField fx:id="txtNom" promptText="Nom" />
        <TextField fx:id="txtPrenom" promptText="Prénom" />
        <TextField fx:id="txtDateNaiss" promptText="Date Naissance (YYYY-MM-DD)" />
        <ComboBox fx:id="combosexe" promptText="Sexe" prefWidth="150"/>

        <Button fx:id="btnAjouter" text="Ajouter" onAction="#ajouterPatient"/>

    </HBox>

</AnchorPane>
